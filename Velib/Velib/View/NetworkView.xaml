<Page x:Class="Velib.View.NetworkView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:view="clr-namespace:Velib.View"
      Title="{Binding Name}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0"
                  Header="Stations">
            <ListView ItemsSource="{Binding Stations}"
                      SelectedItem="{Binding SelectedStation}"
                      IsSynchronizedWithCurrentItem="True">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}"/>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>
        <GroupBox Grid.Row="2"
                  Header="Détails">
            <view:StationView DataContext="{Binding SelectedStation}"/>
        </GroupBox>
    </Grid>
</Page>
