<UserControl x:Class="SharpDB.View.MainWindowToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <ToolBarTray>
        <ToolBar>
            <Button Command="{Binding NewWorksheetCommand}"
                    Content="New worksheet"
                    ToolTip="New worksheet" />
            <Button Command="{Binding OpenWorksheetCommand}"
                    Content="Open"
                    ToolTip="Open worksheet" />
        </ToolBar>
        <ToolBar Name="WorksheetToolbar"
                 DataContext="{Binding CurrentWorksheet}">
            <Button Command="{Binding SaveCommand}"
                    Content="Save"
                    ToolTip="Save worksheet"/>
            <Button Command="{Binding CutCommand}"
                    Content="Cut"
                    ToolTip="Cut" />
            <Button Command="{Binding CopyCommand}"
                    Content="Copy"
                    ToolTip="Copy" />
            <Button Command="{Binding PasteCommand}"
                    Content="Paste"
                    ToolTip="Paste" />
            <Separator />
            <Button Command="{Binding ExecuteCurrentCommand}"
                    Content="Execute"
                    ToolTip="Execute current statement" />
            <Button Command="{Binding ExecuteScriptCommand}"
                    Content="Execute script"
                    ToolTip="Execute all statements as script" />
            <Button Command="{Binding ExplainPlanCommand}"
                    Content="Explain"
                    ToolTip="Explain plan" />
        </ToolBar>
    </ToolBarTray>
</UserControl>
