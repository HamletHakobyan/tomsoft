<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Mediatek.ViewModel"
                    xmlns:v="clr-namespace:Mediatek.View"
                    xmlns:vmed="clr-namespace:Mediatek.ViewModel.Editors"
                    xmlns:ved="clr-namespace:Mediatek.View.Editors">

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <v:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MoviesViewModel}">
        <v:MoviesView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:MovieViewModel}">
        <v:MovieView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vmed:MovieEditorViewModel}">
        <ved:MovieEditorView />
    </DataTemplate>
    
</ResourceDictionary>