<?xml version="1.0" encoding="utf-8"?>
<Package>
  
  <Name>Foo full package</Name>
  <Description>Foo binaries, sources and documentation</Description>
  <Version>1.0</Version>
  <OutputFileName>foo-1.0-full.zip</OutputFileName>
  <BasePath>.</BasePath>

  <Root>
    
    <Directory Name="Sources">
      <DirectorySource Path="src\Foo" Recursive="true">
        <ExcludeExtension>.suo</ExcludeExtension>
        <ExcludeExtension>.csproj.user</ExcludeExtension>
        <ExcludeDirectory>bin</ExcludeDirectory>
        <ExcludeDirectory>obj</ExcludeDirectory>
      </DirectorySource>
    </Directory>

    <Directory Name="Binaries">
      <DirectorySource Path="bin\Release" Recursive="true">
        <ExcludeExtension>.pdb</ExcludeExtension>
      </DirectorySource>
    </Directory>

    <Directory Name="Documentation">
      <Directory Name="html">
        <DirectorySource Path="doc\html">
          <ExcludeExtension>.aspx</ExcludeExtension>
          <ExcludeFile>web.config</ExcludeFile>
        </DirectorySource>
      </Directory>
      <FileSource Path="doc\chm\Foo.chm" />
    </Directory>

  </Root>
  
</Package>