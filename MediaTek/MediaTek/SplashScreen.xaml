<Window x:Class="MediaTek.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaTek" AllowsTransparency="True" WindowStyle="None"
        Background="Transparent" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Resources/Splash.png" Stretch="None" />
        <ProgressBar Grid.Row="1" Orientation="Horizontal" IsIndeterminate="True"
                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
